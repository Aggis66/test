<script>
        // 從 Firebase 專案設定中獲取配置代碼
        const math-5a730 = {
            apiKey: "YOUR_API_KEY",
            authDomain: "YOUR_PROJECT_ID.firebaseapp.com",
            projectId: "YOUR_PROJECT_ID",
            storageBucket: "YOUR_PROJECT_ID.appspot.com",
            messagingSenderId: "YOUR_MESSAGING_SENDER_ID",
            appId: "YOUR_APP_ID"
        };

        // 初始化 Firebase
        const app = firebase.initializeApp(math-5a730);
        const db = firebase.firestore();
        const storage = firebase.storage();
    </script>
	</body>
	
<script>
    // 監聽表單提交
    document.getElementById('answer-form').addEventListener('submit', async (e) => {
        e.preventDefault(); // 阻止表單提交自動刷新頁面

        // 獲取表單數據
        const name = document.getElementById('name').value;
        const studentId = document.getElementById('student_id').value;
        const answer = document.getElementById('answer').value;
        const pdfFile = document.getElementById('pdf').files[0];

        try {
            // 上傳 PDF 檔案到 Firebase Storage
            const storageRef = storage.ref();
            const pdfRef = storageRef.child(`pdfs/${studentId}_${pdfFile.name}`);
            await pdfRef.put(pdfFile);

            // 獲取 PDF 檔案的下載 URL
            const pdfURL = await pdfRef.getDownloadURL();

            // 儲存數據到 Firestore
            await db.collection('answers').add({
                name: name,
                student_id: studentId,
                answer: answer,
                pdf_url: pdfURL,
                timestamp: firebase.firestore.FieldValue.serverTimestamp()
            });

            alert('提交成功！');

        } catch (error) {
            console.error('提交失敗：', error);
            alert('提交過程中發生錯誤，請重試。');
        }
    });
</script>

